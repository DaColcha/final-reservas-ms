# üîπ 1Ô∏è‚É£ Instalar dependencias solamente cuando sea necesario
FROM node:20-alpine3.20 AS deps
RUN apk add --no-cache libc6-compat
WORKDIR /app
COPY package.json package-lock.json ./
RUN npm install --only=production

# üîπ 2Ô∏è‚É£ Construir la aplicaci√≥n con cache de dependencias
FROM node:20-alpine3.20 AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .
RUN npm run build

# üîπ 3Ô∏è‚É£ Imagen de producci√≥n, copiar archivos y ejecutar NestJS
FROM node:20-alpine3.20 AS runner
WORKDIR /usr/src/app
COPY package.json package-lock.json ./
RUN npm install --only=production
COPY --from=builder /app/dist ./dist
EXPOSE 3004
CMD ["node", "dist/main"]
